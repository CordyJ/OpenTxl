% Ryman Prolog interface specfication syntax

comments
        '%
end comments

define program
        [repeat functionSpec]
end define

define functionSpec
        [functionNameSpec]
        [repeat parameterSpec]
        [opt returnsSpec]
        [opt failsSpec]
end define

define functionNameSpec
        'function ( [functionName] ).   [NL]
end define

define parameterSpec
        'parameter ( [functionName] , [inOut] , [typeSpec] , [parameterName] ). [NL]
end define

define returnsSpec
        'returns ( [functionName] , [typeSpec] , [returnsName] ).       [NL]
end define

define failsSpec
        'fails ( [functionName] , [condition] ).        [NL]
end define

define functionName
        [id]
end define

define inOut
        'in | 'out
end define

define typeSpec
        [id] [opt widthSpec] [opt '*]
end define

define widthSpec
        ( [number] )
end define

define parameterName
        [id]
end define

define returnsName
        [id]
end define

define condition
        [stringlit]
end define
